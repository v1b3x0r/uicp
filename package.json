{
  "name": "uikit",
  "version": "1.0.0",
  "private": true,
  "description": "Cross-framework UI Interaction Protocol",
  "type": "module",
  "scripts": {
    "build": "pnpm -r --filter ./packages/* run build",
    "dev:vanilla": "cd examples/vanilla && python3 -m http.server 8080",
    "dev:react": "cd examples/react && npm run dev",
    "dev:svelte": "cd examples/svelte && npm run dev",
    "test": "vitest",
    "size": "size-limit"
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.0.0",
    "size-limit": "^11.0.0",
    "tsup": "^8.0.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/uikit"
  },
  "license": "MIT",
  "author": "Your Name"
}