{
  "name": "@uip/monorepo",
  "version": "2.0.0",
  "private": true,
  "description": "Universal UI Protocol - Lean, cross-framework UI primitives",
  "type": "module",
  "scripts": {
    "build": "npm run build:core && npm run build:plugins && npm run build:adapters",
    "build:core": "cd packages/core && npm run build",
    "build:plugins": "cd packages/plugins/gesture && npm run build && cd ../direction && npm run build && cd ../snap && npm run build",
    "build:adapters": "npm run build:adapter-react && npm run build:adapter-svelte && npm run build:adapter-vanilla",
    "build:adapter-react": "cd packages/adapters/react && npm run build",
    "build:adapter-svelte": "cd packages/adapters/svelte && npm run build", 
    "build:adapter-vanilla": "cd packages/adapters/vanilla && npm run build",
    "dev:vanilla": "cd examples/vanilla && npm run dev",
    "dev:react": "cd examples/react && npm run dev",
    "dev:svelte5": "cd examples/svelte5 && npm run dev",
    "test": "vitest",
    "size": "size-limit",
    "clean": "rm -rf packages/core/dist packages/plugins/*/dist packages/adapters/*/dist",
    "release": "npm run build && npm run test && npm run size"
  },
  "workspaces": [
    "packages/core",
    "packages/plugins/*", 
    "packages/adapters/*",
    "packages/skins/*",
    "examples/*"
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.0.0",
    "@testing-library/dom": "^10.4.0",
    "@vitest/ui": "^3.2.0",
    "happy-dom": "^18.0.0",
    "size-limit": "^11.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vite": "^7.1.0",
    "vitest": "^3.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/uikit"
  },
  "license": "MIT",
  "author": "Your Name"
}