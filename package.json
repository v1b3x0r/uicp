{
  "name": "@uip/monorepo",
  "version": "2.0.0",
  "private": true,
  "description": "Universal UI Protocol - Lean, cross-framework UI primitives",
  "type": "module",
  "scripts": {
    "build": "npm run build:core && npm run build:plugins && npm run build:adapters",
    "build:core": "cd packages/core && npm run build",
    "build:plugins": "cd packages/plugins/gesture && npm run build && cd ../direction && npm run build && cd ../snap && npm run build",
    "build:adapters": "npm run build:adapter-svelte && npm run build:adapter-vanilla",
    "build:adapter-svelte": "cd packages/adapters/svelte && npm run build", 
    "build:adapter-vanilla": "cd packages/adapters/vanilla && npm run build",
    "dev:vanilla": "cd examples/vanilla && npm run dev",
    "dev:svelte": "cd examples/svelte && npm run dev",
    "test": "vitest",
    "size": "size-limit",
    "size:check": "npm run build && size-limit",
    "clean": "rm -rf packages/core/dist packages/plugins/*/dist packages/adapters/*/dist",
    "release": "npm run build && npm run test && npm run size"
  },
  "workspaces": [
    "packages/core",
    "packages/plugins/*", 
    "packages/adapters/*",
    "packages/skins/*",
    "examples/*"
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.0.0",
    "@testing-library/dom": "^10.4.0",
    "@vitest/ui": "^3.2.0",
    "happy-dom": "^18.0.0",
    "size-limit": "^11.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vite": "^7.1.0",
    "vitest": "^3.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/uip"
  },
  "size-limit": [
    {
      "path": "packages/core/dist/index.js",
      "limit": "5 KB",
      "name": "@uip/core"
    },
    {
      "path": "packages/adapters/vanilla/dist/index.js",
      "limit": "1 KB",
      "name": "@uip/adapter-vanilla"
    },
    {
      "path": "packages/adapters/svelte/dist/index.js",
      "limit": "1 KB",
      "name": "@uip/adapter-svelte"
    },
    {
      "path": "packages/plugins/gesture/dist/index.js",
      "limit": "2 KB",
      "name": "@uip/plugin-gesture"
    },
    {
      "path": "packages/plugins/position/dist/index.js",
      "limit": "2 KB",
      "name": "@uip/plugin-position"
    },
    {
      "path": "packages/plugins/snap/dist/index.js",
      "limit": "1.5 KB",
      "name": "@uip/plugin-snap"
    }
  ],
  "license": "MIT",
  "author": "Your Name"
}