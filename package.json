{
  "name": "uikit",
  "version": "1.0.0",
  "private": true,
  "description": "Cross-framework UI Interaction Protocol",
  "type": "module",
  "scripts": {
    "build": "npm run build:core && npm run build:vanilla && npm run build:react && npm run build:svelte && npm run build:skin",
    "build:core": "cd packages/ui-core && npm run build",
    "build:vanilla": "cd packages/ui-vanilla && npm run build",
    "build:react": "cd packages/ui-react && npm run build",
    "build:svelte": "cd packages/ui-svelte && npm run build",
    "build:skin": "cd packages/ui-skin-vanilla && npm run build || true",
    "dev:vanilla": "cd examples/vanilla && npm run dev",
    "dev:react": "cd examples/react && npm run dev",
    "dev:svelte": "cd examples/svelte && npm run dev",
    "test": "vitest",
    "size": "size-limit"
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.0.0",
    "@testing-library/dom": "^10.4.0",
    "@vitest/ui": "^3.2.0",
    "happy-dom": "^18.0.0",
    "size-limit": "^11.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vite": "^7.1.0",
    "vitest": "^3.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/uikit"
  },
  "license": "MIT",
  "author": "Your Name"
}