{
  "name": "@uip/adapter-react",
  "version": "2.0.0",
  "description": "React adapter for Universal UI Protocol",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.js --format esm,cjs --dts --clean",
    "dev": "tsup src/index.js --format esm,cjs --dts --watch"
  },
  "keywords": [
    "ui",
    "react",
    "adapter",
    "hooks"
  ],
  "license": "MIT",
  "peerDependencies": {
    "@uip/core": "^2.0.0",
    "react": ">=16.8.0"
  },
  "devDependencies": {
    "react": "^18.0.0",
    "tsup": "^8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/uip",
    "directory": "packages/adapters/react"
  }
}