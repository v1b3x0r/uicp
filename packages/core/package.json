{
  "name": "@uip/core",
  "version": "2.0.0",
  "description": "Universal UI Protocol - Core primitives",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./drawer": {
      "import": "./dist/drawer/index.js",
      "require": "./dist/drawer/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.js src/drawer/index.js --format esm,cjs --dts --clean",
    "dev": "tsup src/index.js src/drawer/index.js --format esm,cjs --dts --watch"
  },
  "keywords": [
    "ui",
    "headless",
    "protocol",
    "drawer",
    "accessibility",
    "universal"
  ],
  "license": "MIT",
  "devDependencies": {
    "tsup": "^8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/uip",
    "directory": "packages/core"
  }
}