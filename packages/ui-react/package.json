{
  "name": "@uikit/react",
  "version": "1.0.0",
  "description": "React adapter for UIKit",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.js --format esm,cjs --dts --clean",
    "dev": "tsup src/index.js --format esm,cjs --dts --watch"
  },
  "peerDependencies": {
    "@uikit/core": "^1.0.0",
    "react": ">=18.0.0"
  },
  "devDependencies": {
    "react": "^18.0.0",
    "tsup": "^8.0.0"
  },
  "license": "MIT"
}